<header class="py-12 px-6 mx-auto max-w-3xl">
  <%= render "svg/details_of_the_day" %>
  <ol class="relative border-l border-rose-200">                  
  <% events.each do |event| %>
    <li class="mb-10 ml-4 text-stone-700">
      <div class="absolute w-3 h-3 rounded-full mt-1.5 -left-1.5 border border-rose-200 bg-rose-200"></div>
      <time class="mb-1 text-sm font-normal leading-none"><%= event[:time] %><%= event[:location].present? ? " - #{event[:location]}" : "" %></time>
      <h3 class="text-lg <%= event[:type] == "primary" ? "font-semibold" : "" %>"><%= event[:title] %></h3>
      <% if event[:description].present? %> 
        <p class="text-base font-normal text-stone-500 my-2"><%= event[:description] %></p>
      <% end %>

      <% if event[:actions].present? %> 
        <% event[:actions].each do |action| %>
        <a href="<%= action[:url] %>" class="inline-flex items-center py-1 px-2 mt-1 text-sm font-medium text-stone-700 bg-white rounded-lg border border-stone-200 hover:bg-rose-100 hover:text-rose-900 hover:border-rose-100 focus:z-10 focus:ring-4 focus:outline-none focus:ring-rose-200 focus:text-rose-900"><%= action[:text] %> <svg class="ml-2 w-3 h-3" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M12.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd"></path></svg></a>
        <% end %>
      <% end %>
    </li>
  <% end %>
  </ol>
