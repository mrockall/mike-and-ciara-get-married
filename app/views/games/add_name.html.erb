<section class="py-12 px-6 mx-auto max-w-xl">
  <%= render "svg/games" %>
  <h2 class="mb-4 text-lg font-semibold text-stone-700">
    <% if @redirected_from_game %>
    ❓ - Before we start...
    <% else %>
    ❓ - What's your name?
    <% end %>
  </h2>

  <p class="mb-4">
    We need to know your first name so that we can put it up on the leaderboard? Add in a nickname or a fake name if you'd prefer to remain anonymous.
  </p>

  <%= form_with url: "/games/add-name", method: :post do |form| %>
    <input type="name" name="name" class="text-gray-900 text-sm bg-white rounded-lg border border-stone-200 focus:z-10 focus:ring-2 focus:outline-none focus:ring-rose-200 focus:text-rose-900 block w-full mb-6 p-2.5" placeholder="e.g. Mike" value="<%= @current_name %>" required autofocus>
    <input type="hidden" name="redirect_to_game" value="<%= @redirected_from_game %>" />
    <button type="submit" class="inline-flex items-center py-1 px-2 mt-1 text-sm font-medium text-stone-700 bg-white rounded-lg border border-stone-200 hover:bg-rose-100 hover:text-rose-900 hover:border-rose-100 focus:z-10 focus:ring-4 focus:outline-none focus:ring-rose-200 focus:text-rose-900">
      <% if @redirected_from_game %>
      Add your Name & Start the Quiz
      <% else %>
      Add Name
      <% end %>
      <svg class="ml-2 w-3 h-3" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M12.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd"></path></svg>
    </button>
  <% end %>
</section>

